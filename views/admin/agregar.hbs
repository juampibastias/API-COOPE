<div class="container" style="margin: 100px auto">
  <div class="row">
    <div class="col-6 offset-3">
      <h4>Agregar nueva novedad</h4>
      <form
        action="/admin/novedades/agregar"
        method="post"
        enctype="multipart/form-data"
      >
        <div class="form-group">
          <input
            type="text"
            class="form-control"
            placeholder="Titulo"
            name="titulo"
          />
        </div>
        <div class="form-group">
          <textarea
            type="text"
            class="form-control"
            placeholder="Subtitulo"
            name="subtitulo"
          ></textarea>
        </div>
        <br />
        <div class="form-group">
          <label>Imagen:<input type="file" name="imagen" id="imagen" /></label>
        </div>
        <br />
        <div class="form-group">
          <textarea
            type="text"
            class="form-control"
            placeholder="Cuerpo"
            name="cuerpo"
          ></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a href="http://localhost:3000/admin/novedades" class="btn btn-success"><i class="fas fa-long-arrow-alt-left"> </i>Volver</a>
      </form>
      {{#if error}}
        {{message}}
      {{/if}}
    </div>
  </div>
</div>