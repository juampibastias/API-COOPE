<script src="https://kit.fontawesome.com/b85fe5262a.js" crossorigin="anonymous"></script>

<div class="container" style="margin-top: 50px auto">


    <div class="row">
            <p class="text-end">Hola {{usuario}}!<a  class="btn btn-danger" href="/admin/login">
             Cerrar sesi√≥n <i class="fas fa-sign-out-alt"></i></a></p>
            </div>



            <div class="row">
                <div class="col-7">
                    <h2>Listado de cortes programados</h2>
                </div>
            <div class="col-5 text-end">
                <a href="/admin/cortesprogramados/agregarcortes" class="btn btn-success"><i class="fa fa-plus" aria-hidden="true"></i>Agregar cortes</a>
                <a href="http://localhost:3000/admin/principal" class="btn btn-success"><i class="fas fa-long-arrow-alt-left"> </i>Volver</a>
                    </div>
                </div>



            <div class="row">
                <div class="col">
                    <table class="table">
                            <thead>
                                <tr class="table-dark">
                                    <th scope="col">#</th>
                                    <th scope="col">Fecha de inicio</th>
                                    <th scope="col">Zonas afectadas</th>
                                    <th scope="col">Fecha de fin</th>
                                    <th scope="text-end">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                            {{#each cortesprogramados}}
                                <tr>
                                    <th scope="row">{{ID}}</th>
                                    <td>{{iniciocorte}}</td>
                                    <td>{{zonaafectada}}</td>
                                    <td>{{fincorte}}</td>
                                    <td class="text-end">
                                        <a class="btn btn-secondary" href="/admin/cortesprogramados/modificarcorte/{{ID}}"><i class="fas fa-pencil-alt"></i></a>
                                        <a class="btn btn-secondary" href="/admin/cortesprogramados/eliminarcorte/{{ID}}"><i class="fa fa-trash-alt"></i></a>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>